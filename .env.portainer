# LifeGraph - Portainer Deployment Environment Variables
# Copy these to Portainer's "Environment variables" section when creating the stack
# or save as .env file on your NAS alongside docker-compose.portainer.yml

# =============================================================================
# REQUIRED - Generate secure values for production!
# =============================================================================

# Database password (generate: openssl rand -base64 32)
DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Django secret key (generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=CHANGE_ME_GENERATE_DJANGO_SECRET_KEY

# MinIO credentials (generate: openssl rand -base64 16 | tr -dc 'a-zA-Z0-9')
MINIO_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS
MINIO_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Field encryption key - 64 hex characters (generate: python -c "import secrets; print(secrets.token_hex(32))")
# CRITICAL: Back this up! Data encrypted with this key is UNRECOVERABLE without it!
FIELD_ENCRYPTION_KEYS=CHANGE_ME_64_HEX_CHARACTERS_HERE

# =============================================================================
# DOMAIN CONFIGURATION - Set to your actual domain
# =============================================================================

# Your domain (without https://)
ALLOWED_HOSTS=lifegraph.yourdomain.com

# Full URL with https (for CSRF protection)
CSRF_TRUSTED_ORIGINS=https://lifegraph.yourdomain.com

# CORS origins (usually same as CSRF)
CORS_ALLOWED_ORIGINS=https://lifegraph.yourdomain.com

# =============================================================================
# OPTIONAL - AI Features
# =============================================================================

# OpenAI API key for AI features (summaries, parsing, smart search)
OPENAI_API_KEY=

# =============================================================================
# OPTIONAL - Security
# =============================================================================

# Require MFA verification for users who have it enabled
MFA_REQUIRED=false

# =============================================================================
# OPTIONAL - LinkedIn Integration (use with caution)
# =============================================================================

# Enable LinkedIn integration (use a dedicated account!)
LINKEDIN_ENABLED=false
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=
